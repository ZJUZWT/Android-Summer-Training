<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--1、圆角 和 按下后背景变颜色-->
    <item android:state_pressed="false"><!-- 按钮未点击-->
        <shape>
            <stroke android:width="3dp" android:color="#FFFF00" /><!-- 边框颜色，边框大小-->
            <solid android:color="#FFFFFF" /> <!-- 填充的颜色：这里设置背景透明 -->
            <corners android:radius="50dp" /><!-- android:radius 弧形的半径 -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true"> <!-- 按钮选中状态-->
        <shape>
            <stroke android:width="3dp" android:color="#09C7F7" /><!-- 边框颜色，边框大小-->
            <solid android:color="#888888" /> <!-- 填充的颜色：这里设置背景透明 -->
            <corners android:radius="50dp" /><!-- android:radius 弧形的半径 -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

</selector>